    .typing-container {  
        text-align: center;  
        font-size: 2.5rem;  
        font-weight: 600;  
        display: flex;  
        flex-direction: column;  
        align-items: center;  
        gap: 1.5rem;  
        position: relative;  
    }  

    /* Typing effect shown in the same spot */  
    .typing-text {  
        position: absolute;  
        border-right: 3px solid white;  
        padding-right: 5px;  
        white-space: nowrap;  
        overflow: hidden;  
        opacity: 0;  
    }  

    .typing-text.typing-1 {  
        animation: typing 1.5s steps(13) 0.5s forwards,  
                   blink 0.75s step-end infinite,  
                   fadeOut 0.4s 2.3s forwards;  
    }  

    .typing-text.typing-2 {  
        animation: typing 1.5s steps(12) 3.2s forwards,  
                   blink 0.75s step-end 3.2s infinite,  
                   fadeOut 0.4s 5s forwards;  
    }  

    .typing-text.typing-3 {  
        animation: typing 1.5s steps(10) 5.9s forwards,  
                   blink 0.75s step-end 5.9s infinite,  
                   fadeOut 0.4s 8.0s forwards;  
    }  

    /* Final titles appear after all typing */  
    .final-titles {  
        display: flex;  
        flex-direction: column;  
        gap: 1rem;  
        opacity: 0;  
        animation: fadeInDown 0.8s 8.4s forwards;  
    }  

    .final-title {  
        font-size: 2rem;  
        transform: translateY(-20px);  
        opacity: 0;  
    }  

    .final-title:nth-child(1) {  
        animation: slideDown 0.6s 8.5s forwards;  
    }  

    .final-title:nth-child(2) {  
        animation: slideDown 0.6s 8.8s forwards;  
    }  

    .final-title:nth-child(3) {  
        animation: slideDown 0.6s 9.1s forwards;  
    }  

    @keyframes typing {  
        from { width: 0; opacity: 1; }  
        to { width: 100%; opacity: 1; }  
    }  

    @keyframes blink { 50% { border-color: transparent; } }  

    @keyframes fadeOut {  
        to { opacity: 0; transform: translateY(-10px); }  
    }  

    @keyframes fadeInDown { from { opacity: 0; } to { opacity: 1; } }  

    @keyframes slideDown {  
        to { opacity: 1; transform: translateY(0); }  
    }  

    @media (max-width: 768px) {  
        .typing-container { font-size: 1.8rem; }  
        .final-title { font-size: 1.5rem; }  
    }  
